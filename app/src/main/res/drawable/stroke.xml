<!-- res/drawable/stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#EB2A6D" />
            <corners android:radius="5dp"/>
            <!-- Tambahkan padding di sini -->
            <padding
                android:left="15dp"
                android:top="20dp"
                android:right="15dp"
                android:bottom="20dp" />
        </shape>
    </item>
</layer-list>
